<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nordic Rose</title>
    <link rel="stylesheet" href="/assets/scss/style.css">
</head>
<body>
    <nav>
        <img src="/assets/img/logo.svg" alt="" id="logo">
        <ul class="hide">
           <li ><a href="/">ALL</a></li>
           <li id="active"><a href="/add">NEW ARTICLE</a></li>
        </ul>
        <span id="burgerMenu" style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; </span>
    </nav>
    <!-- overlayMen端 -->
    <div id="myNav" class="overlay">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <div class="overlay-content">
          <a href="/">All</a>
          <a href="/add">NEW ARTICLE</a>
          
        </div>
        
        <!-- Funktionen f端r das Overlay Men端 -->
        <script>
            function openNav() {
              document.getElementById("myNav").style.width = "100vw";
            }
            
            function closeNav() {
              document.getElementById("myNav").style.width = "0%";
            }
        </script>
    <!-- overlayMen端 -->
      </div>
    <section class="add_form">
        <h1 id="addHeadline">ADD NEW ARTICLE</h1>
        <div id='stripe'></div>

        <form action="/new" method="POST">
        <input type="hidden" name="id" placeholder="id" value="<%=response%>">
        <input type="text" name="title" placeholder="Title">
        <input type="text" name="url" id="" placeholder="Url Picture">
        <input type="text" name="author" placeholder="Author">
        <input type="text" name="body" id="body" placeholder="Write your article here...." >
        <input type="hidden" name="duration" id="" placeholder="Duration" value="<%=3%>">
        <input type="hidden" name="published_at" id="date" placeholder="published at" value="<%=new Date().toLocaleDateString('de-DE')%>">
        <input type="hidden" name="author_bild" placeholder="author_bild" value="https://source.unsplash.com/random/100x100">
        <input type="submit" value="SEND ARTICLE">
        </form>
    </section>
    <section id="whatNext">
        <h2>What to read next</h2>
        <section class="grid3">
            <% results.forEach(elt => { %>
                <% if (1<=elt.id&&elt.id<=6) { %>
                <a href=<%=`/detail/${elt.id}`%>>
                    <div>
                        <% if (elt.id<=12) { %>
                        <img src=<%= `../../assets/img${elt.url}` %> alt="">
                        <% } else { %>
                            <img src=<%= `${elt.url}` %> alt="">
                        <% } %>
                            <article>
                                <p><%= elt.title %> </p>
                            </article>
                    <% } %>
                    </div>
                </a>
            <% }) %>
        </section>
    </section>
    <%- include('../partials/footer.ejs')  %> 
</body>
</html>